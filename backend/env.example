# Server Configuration
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL="mysql://user:password@localhost:3306/shopify_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES=7d

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret
SHOPIFY_SCOPES=read_orders,read_products,read_customers
SHOPIFY_API_VERSION=2023-10
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Cron Schedule (cron format: minute hour day month weekday)
CRON_SCHEDULE=0 * * * *

# Demo Mode (set to true to use demo data instead of Shopify API)
DEMO_MODE=false

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
